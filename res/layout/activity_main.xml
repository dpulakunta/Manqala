         android:text="@string/pit2" />

     <TextView
         android:id="@+id/pitP22"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignBaseline="@+id/button22"
         android:layout_alignBottom="@+id/button22"
         android:layout_alignLeft="@+id/pitP21"
         android:text="@string/player2pit2Value"
         android:textSize="25sp" />
     
     <!-- Button 3 -->
     <Button
         android:id="@+id/button13"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignLeft="@+id/button11"
         android:layout_below="@+id/button12" 
         android:text="@string/pit3"
         android:onClick="onPressed"/>
      <Button
         android:id="@+id/button23"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignBaseline="@+id/button13"
         android:layout_alignBottom="@+id/pitP13"
         android:layout_alignLeft="@+id/button21"
         android:text="@string/pit3" />
<!-- Button 4 -->
     <Button
         android:id="@+id/button14"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignLeft="@+id/button11"
         android:layout_below="@+id/button13" 
         android:text="@string/pit4"
         android:onClick="onPressed"/>
<!-- Button 5 -->
     <Button
         android:id="@+id/button15"
         android:layout_width="wrap_content"
